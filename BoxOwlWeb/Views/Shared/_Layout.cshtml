<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BoxOwlWeb</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body style="background: wheat">
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="collapse navbar-collapse" id="collapsibleNavbar">
                <ul class="navbar-nav">
                    @if (User.Identity.IsAuthenticated) {
                        <li class="nav-item">
                            <a asp-action="Index" asp-controller="Product" class="nav-link">Продукты</a>
                        </li>
                    }
                </ul>
                <ul class="navbar-nav ml-auto">
                    @if (User.Identity.IsAuthenticated) {
                        <li class="nav-item">
                            <a asp-action="Index" asp-controller="Cart" class="nav-link">Корзина</a>
                        </li>
                        <li class="nav-item">
                            <a asp-action="Profile" asp-controller="Account" class="nav-link">@User.Identity.Name</a>
                        </li>
                    } else {
                        <li class="nav-item">
                            <a asp-action="Login" asp-controller="Account" class="nav-link">Вход</a>
                        </li>
                        <li class="nav-item">
                            <a asp-action="Register" asp-controller="Account" class="nav-link">Регистрация</a>
                        </li>
                    }
                </ul>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
